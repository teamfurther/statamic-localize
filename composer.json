{
    "name": "teamnovu/localize",
    "description": "Localize allows you to easily translate i18n files within Statamic",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Teamnovu\\Localize\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Teamnovu\\Localize\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Patrick Stillhart",
            "email": "patrick@stillh.art"
        }
    ],
    "require": {
        "php": "^8.2",
        "statamic/cms": "^5.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Localize",
            "description": "Localize addon"
        },
        "laravel": {
            "providers": [
                "Teamnovu\\Localize\\ServiceProvider"
            ]
        }
    },
    "prefer-stable": true
}